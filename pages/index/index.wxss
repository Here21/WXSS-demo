.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.avatar {
    width: 82rpx;
    height: 82rpx;
    margin-top: 160rpx;
    border: 1rpx #fff solid;
    border-radius: 50%;
}
.nickname {
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 100rpx;
}
.motto-wrap {
    margin-top: 200rpx;
    width: 200rpx;
    height: 80rpx;
    border: 1rpx #fff solid;
    border-radius: 20rpx;
    text-align: center;
    line-height: 80rpx;
}
.motto {
    font-size: 22rpx;
    font-weight: bold;
}
page {
    height: 100%;
    background: #b3d4db;
}
